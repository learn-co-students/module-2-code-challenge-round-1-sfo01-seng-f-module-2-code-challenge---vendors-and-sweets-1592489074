<h1>New VendorSweet</h1>

<% if flash[:vendor_sweet_errors] %>
    <% flash[:vendor_sweet_errors].each do |e| %>
    <%= e %>
    <% end %>
<% end%>


<%= form_for @vendor_sweet do |v| %>

    <%= v.label :vendor_id %>
    <%= v.collection_select :vendor_id, @vendors, :id, :name%>

    <%= v.label :sweet_id %>
    <%= v.collection_select :sweet_id, @sweets, :id, :name%>

    <%= v.label :price %>
    <%= v.number_field :price %>

    <%= v.submit "BEEF" %>

<% end %>
     