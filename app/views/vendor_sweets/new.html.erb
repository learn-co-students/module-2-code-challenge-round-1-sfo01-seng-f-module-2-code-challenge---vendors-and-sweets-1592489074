<h1>New VendorSweet Form</h1>

<%if flash[:errors]%>
<%flash[:errors].each do |e|%>
<%=e%>
<%end%>
<%end%>

<%=form_for @vendor_sweet do |f|%>

    <%=f.label :vendor_id%>
    <%=f.collection_select :vendor_id, Vendor.all, :id, :name%>

    <%=f.label :sweet_id%>
    <%=f.collection_select :sweet_id, Sweet.all, :id, :name%>

    <%=f.label :price%>
    <%=f.text_field :price%>

    <%=f.submit%>

<%end%>
